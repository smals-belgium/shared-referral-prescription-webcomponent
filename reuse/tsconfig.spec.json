/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/@types/node"
    ],
    "paths": {
      "@reuse/*": [
        "reuse/*"
      ]
    }
  },
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
